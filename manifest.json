{
    "name": "Yunohost Users-Groups",
    "id": "ynh-users-groups",
    "packaging_format": 1,
    "description": {
        "en": "Manage the YunoHost users, groups and permissions in a standalone application.",
        "fr": "Administrer les utilisateurs, groupes et permissions YunoHost dans une application autonome."
    },
    "version": "1.0",
    "url": "https://github.com/freepius/ynh-users-groups",
    "license": "GNU AGPLv3",
    "maintainer": {
        "name": "Mathieu Poisbeau",
        "email": "pro@freepius.net",
        "url": "https://freepius.net"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for ynh-users-groups",
                    "fr": "Choisissez un domaine pour ynh-users-groups"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for ynh-users-groups",
                    "fr": "Choisissez un chemin pour ynh-users-groups"
                },
                "example": "/ynh-users-groups",
                "default": "/ynh-users-groups"
            }
        ]
    }
}